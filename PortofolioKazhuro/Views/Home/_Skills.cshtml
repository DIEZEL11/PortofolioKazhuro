@model IEnumerable<PortofolioKazhuro.Models.SkillCategory>

@if (Model != null && Model.Any())
{
    <div class="card mb-4 shadow-sm border-0 rounded-4 w-100">
        <div class="card-header bg-gradient bg-primary text-white rounded-top-4 py-4 px-4 d-flex align-items-center">
            <i class="fas fa-layer-group me-3 fa-lg"></i>
            <h4 class="mb-0 fw-bold">Навыки</h4>
        </div>
        <div class="card-body px-4 py-4">
            <div class="row g-4">
                @foreach (var category in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100 skill-category-card">
                            <div class="card-header bg-light rounded-top-4 d-flex align-items-center">
                                <i class="fas fa-tags me-2 text-primary"></i>
                                <span class="fw-semibold text-dark">@category.Name</span>
                            </div>
                            <div class="card-body">
                                @if (category.Skills != null && category.Skills.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var skill in category.Skills.OrderByDescending(s => s.Proficiency))
                                        {
                                            <li class="mb-3">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div>
                                                        <i class="fas fa-check-circle text-success me-2"></i>
                                                        <span class="fw-bold">@skill.Name</span>
                                                    </div>
                                                    <span class="badge bg-success bg-opacity-75 fs-6 px-3 py-2">
                                                        @skill.Proficiency%
                                                    </span>
                                                </div>
                                                <div class="progress mt-2" style="height:8px;">
                                                    <div class="progress-bar bg-gradient bg-success" role="progressbar"
                                                         style="width:@skill.Proficiency%"
                                                         aria-valuenow="@skill.Proficiency"
                                                         aria-valuemin="0" aria-valuemax="100">
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="text-muted py-3 text-center">
                                        <i class="fas fa-exclamation-circle me-2"></i>Нет навыков в этой категории.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="card mb-4 shadow-sm border-0 rounded-4 w-100">
        <div class="card-body text-center py-5">
            <i class="fas fa-layer-group fa-2x text-primary mb-3"></i>
            <h5 class="fw-semibold mb-2">Навыки не добавлены</h5>
            <p class="text-muted">Добавьте свои профессиональные навыки для отображения.</p>
        </div>
    </div>
}

<style>
    .skill-category-card {
        transition: box-shadow .2s, transform .2s;
    }
    .skill-category-card:hover {
        box-shadow: 0 8px 32px rgba(0,123,255,0.15);
        transform: translateY(-4px) scale(1.02);
        border: 1px solid #0d6efd22;
    }
    .progress-bar.bg-gradient {
        background: linear-gradient(90deg, #198754 0%, #0d6efd 100%);
    }
    .card-header.bg-gradient {
        background: linear-gradient(90deg, #0d6efd 0%, #198754 100%);
    }
</style>
