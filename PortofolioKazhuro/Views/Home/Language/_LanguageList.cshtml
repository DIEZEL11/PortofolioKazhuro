@using PortofolioKazhuro.Models.Language
@model IEnumerable<LanguageSkill>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var skill in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold text-primary mb-1">@skill.LanguageName</h5>
                        <p class="text-muted mb-2"><strong>Уровень:</strong> @skill.LanguageLevel?.Name</p>
                        <p class="flex-grow-1 text-muted">
                            @if (!string.IsNullOrWhiteSpace(skill.Description))
                            {
                                @skill.Description
                            }
                            else
                            {
                                <em>Нет описания</em>
                            }
                        </p>

   

                        </div>

                    </div>
                </div>
           
        }
    </div>
}
else
{
    <div class="p-5 text-muted text-center">
        <i class="fas fa-language fa-2x mb-3"></i>
        <h5 class="fw-semibold">Нет добавленных языков</h5>
        <p>Нажмите «Добавить язык», чтобы начать</p>
    </div>
}
