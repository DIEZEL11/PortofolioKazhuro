@using PortofolioKazhuro.ViewModel
@model AdminViewModel

@{
    ViewData["Title"] = "Обо мне";
}

<h1>@Model.Profile.Name</h1>

@* <img src="@Model.Profile" alt="Фото профиля" width="150" /> *@

<p>@Model.Profile.About</p>

<p>
    Email: <a href="mailto:@Model.Profile.Email">@Model.Profile.Email</a><br />
    GitHub: <a href="@Model.Profile.GitHubUrl" target="_blank">@Model.Profile.GitHubUrl</a><br />
    LeetCode: <a href="@Model.Profile.LeetCodeUrl" target="_blank">@Model.Profile.LeetCodeUrl</a>
</p>

<hr />

<h2>Навыки</h2>
<ul>
    @foreach (var skill in Model.Skills)
    {
        <li>@skill.Name</li>
    }
</ul>

<hr />

<h2>Образование</h2>
<ul>
    @foreach (var edu in Model.educations)
    {
        <li>
            <strong>@edu.name</strong>
            (@edu.DateStart?.ToString("yyyy") – @edu.DateEnd?.ToString("yyyy"))
        </li>
    }
</ul>

<hr />

<h2>Проекты</h2>
<div>
    @foreach (var project in Model.Projects)
    {
        <div style="margin-bottom:1em;">
            <h3>@project.Title</h3>
            <p>@project.Description</p>
            <p><a href="@project.GitHubUrl" target="_blank">Исходники на GitHub</a></p>
        </div>
    }
</div>

<hr />

<h2>Сертификаты</h2>
<ul>
    @foreach (var cert in Model.Certificates)
    {
        <li>@cert.Name</li>
    }
</ul>

<hr />

<h2>Опыт работы</h2>
<ul>
    @foreach (var exp in Model.experiences)
    {
        <li>@exp.Description</li>
    }
</ul>
