@using PortofolioKazhuro.ViewModel
@model AdminViewModel
@{
    var birthday = Model.Profile.Birthday;
    var age = birthday != null
        ? (int)((DateTime.Now - birthday).TotalDays / 365.25)
        : 0;

    ViewData["Title"] = "Обо мне";
    Layout = "_Layout";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
    </div>
}


<div class="container py-4 ">
    <div class="profile-glass-card border-0 rounded-4 mb-4" ">
        <div>
            @if (Model.Profile.PhotoData != null)
            {
                var img = Convert.ToBase64String(Model.Profile.PhotoData);
                <img src="data:@Model.Profile.PhotoMimeType;base64,@img"
                     class="profile-photo" alt="Фото профиля" />
            }
            else
            {
                <div class="profile-photo d-flex align-items-center justify-content-center">
                    <i class="fas fa-user fa-2x text-secondary"></i>
                </div>
            }
        </div>

        <div class="profile-details">
            <h2>@Model.Profile.Name @Model.Profile.Surname</h2>
            <p class="mb-1 text-muted">@Model.Profile.Patronymic</p>
            <p class="about">@Model.Profile.About</p>

            <div class="col-12 col-md-4 mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-calendar-alt me-2 text-primary"></i>Дата рождения
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-calendar"></i>
                    </span>
                    @if (birthday != null)
                    {
                        <input type="text" class="form-control" readonly
                               value="@($"{age} лет")"
                               title="@birthday.ToString("dd MMMM yyyy")"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top" />
                    }
                    else
                    {
                        <input type="text" class="form-control" readonly
                               value="Не указано"
                               title="Дата рождения не задана"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top" />
                    }
                </div>
            </div>

            <div class="profile-contacts mb-3">
                <a href="mailto:@Model.Profile.Email" class="contact-mail">
                    <i class="fas fa-envelope"></i>Написать
                </a>
                <a href="tel:@Model.Profile.PhoneNumber" class="contact-phone">
                    <i class="fas fa-phone"></i>Позвонить
                </a>
            </div>

            <div class="social-links">
                @if (!string.IsNullOrWhiteSpace(Model.Profile.GitHubUrl))
                {
                    <a href="@Model.Profile.GitHubUrl" class="social-github" target="_blank">
                        <i class="fab fa-github"></i>
                    </a>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Profile.LeetCodeUrl))
                {
                    <a href="@Model.Profile.LeetCodeUrl" class="social-leetcode" target="_blank">
                        <i class="fas fa-code"></i>
                    </a>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Profile.LinkedinUrl))
                {
                    <a href="@Model.Profile.LinkedinUrl" class="social-linkedin" target="_blank">
                        <i class="fab fa-linkedin"></i>
                    </a>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Profile.TelegramUrl))
                {
                    <a href="@Model.Profile.TelegramUrl" class="social-telegram" target="_blank">
                        <i class="fab fa-telegram"></i>
                    </a>
                }
            </div>
            <!-- Кнопка открытия модального окна -->
            <div class="mt-3">
                <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#jobOfferModal">
                    <i class="fas fa-briefcase me-2"></i>Предложить работу
                </button>
            </div>

        </div>
    </div>
    @await Html.PartialAsync("_WorkExperience", Model.experiences)
    @await Html.PartialAsync("_Education", Model.educations)
    @await Html.PartialAsync("_PROJECTS", Model.Projects)
    @await Html.PartialAsync("_Skills", Model.Skills)
    @await Html.PartialAsync("Language/_Language", Model.LanguageSkills)
    @await Html.PartialAsync("_CertificatesPartial", Model.Certificates)

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-outline-secondary" onclick="window.print()">
            <i class="fas fa-print me-2"></i>Печать страницы
        </button>

    </div>
</div>

<!-- Модальное окно для предложения работы -->
<div class="modal fade" id="jobOfferModal" tabindex="-1" aria-labelledby="jobOfferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="jobOfferModalLabel">
                    💼 Предложить работу
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SubmitJobOffer" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="CompanyName" class="form-label fw-semibold">Компания</label>
                        <input type="text" class="form-control" name="CompanyName" required />
                    </div>

                    <div class="mb-3">
                        <label for="JobDescription" class="form-label fw-semibold">Описание предложения</label>
                        <textarea class="form-control" name="JobDescription" rows="4" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="ContactEmail" class="form-label fw-semibold">Контактный Email</label>
                        <input type="email" class="form-control" name="ContactEmail" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">💰 Зарплатная вилка</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="SalaryFrom" placeholder="От" min="0" required />
                            <input type="number" class="form-control" name="SalaryTo" placeholder="До" min="0" required />
                            <select class="form-select" name="Currency" required>
                                <option value="BYN">BYN</option>
                                <option value="USD">$</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ResponseDeadline" class="form-label fw-semibold">📅 Срок отклика</label>
                        <input type="date" class="form-control" name="ResponseDeadline" required />
                    </div>

                    <div class="mb-3">
                        <label for="WorkFormat" class="form-label fw-semibold">📍 Формат работы</label>
                        <select class="form-select" name="WorkFormat" required>
                            <option value="Удалённо">Удалённо</option>
                            <option value="Офис">Офис</option>
                            <option value="Гибрид">Гибрид</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Attachment" class="form-label fw-semibold">📎 Вложение (файл)</label>
                        <input type="file" class="form-control" name="Attachment" id="Attachment" />
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane me-2"></i>Отправить предложение
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>





