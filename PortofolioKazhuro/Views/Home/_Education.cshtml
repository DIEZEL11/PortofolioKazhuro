@model IEnumerable<PortofolioKazhuro.Models.Education>
@if (Model.Count() > 0)
{
<div class="card mb-4 shadow-sm border-0 rounded-4">
    <!-- Заголовок с кнопкой -->

        <div class="card-header bg-light rounded-top-4 px-4 py-3 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="fas fa-graduation-cap me-2 text-primary"></i>
                <h5 class="mb-0 fw-semibold">Образование</h5>
            </div>
 
 

    <!-- Карточки образования -->
    <div class="card-body px-4 pb-4">
      
            <div class="row g-4">
                @foreach (var edu in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body d-flex flex-column">
                                <h6 class="fw-bold text-dark mb-2">
                                    <i class="fas fa-university me-1 text-primary"></i> @edu.Institution
                                </h6>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-graduation-cap me-1"></i> @edu.Degree
                                </p>
                                @if (edu.DateStart.HasValue || edu.DateEnd.HasValue)
                                {
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        @edu.DateStart?.ToString("yyyy") - @edu.DateEnd?.ToString("yyyy")
                                    </p>
                                }
                                @if (!string.IsNullOrWhiteSpace(edu.Description))
                                {
                                    <p class="text-muted">@edu.Description</p>
                                }

                               
                            </div>
                        </div>
                    </div>
                }
            </div>
        
      
    </div>
    </div>
</div>
}