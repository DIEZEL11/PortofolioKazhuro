@using PortofolioKazhuro.Models.Language
@model IEnumerable<LanguageSkill>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var skill in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold text-primary mb-1">@skill.LanguageName</h5>
                        <p class="text-muted mb-2"><strong>Уровень:</strong> @skill.LanguageLevel?.Name</p>
                        <p class="flex-grow-1 text-muted">
                            @if (!string.IsNullOrWhiteSpace(skill.Description))
                            {
                                @skill.Description
                            }
                            else
                            {
                                <em>Нет описания</em>
                            }
                        </p>

                        

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button class="btn btn-sm btn-outline-primary"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#editLanguageForm-@skill.Id"
                                    aria-expanded="false"
                                    aria-controls="editLanguageForm-@skill.Id">
                                <i class="fas fa-edit me-1"></i> Редактировать
                            </button>

                            <form asp-action="DeleteLanguage" method="post" class="m-0" data-ajax="true" onsubmit="return confirm('Удалить язык?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@skill.Id" />
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt me-1"></i> Удалить
                                </button>
                            </form>
                        </div>

                        <div class="collapse mt-3" id="editLanguageForm-@skill.Id">
                            <form asp-action="EditLanguage" method="post" class="row g-3 needs-validation" novalidate data-ajax="true">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="Id" value="@skill.Id" />

                                <div class="col-md-6">
                                    <label class="form-label" for="LanguageName-@skill.Id">Язык</label>
                                    <input id="LanguageName-@skill.Id" name="LanguageName" class="form-control" required value="@skill.LanguageName" />
                                    <div class="invalid-feedback">Пожалуйста, укажите язык.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="LanguageLevelId-@skill.Id">Уровень</label>
                                    <select id="LanguageLevelId-@skill.Id" name="LanguageLevelId" class="form-select" required>
                                        @foreach (var item in (SelectList)ViewData["LanguageLevels"])
                                        {
                                            if (item.Value == skill.LanguageLevelId.ToString())
                                            {
                                                <option value="@item.Value" selected="selected">@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>


                                    <div class="invalid-feedback">Пожалуйста, выберите уровень.</div>
                                </div>
                       
                                <div class="col-12">
                                    <label class="form-label" for="Description-@skill.Id">Описание</label>
                                    <textarea id="Description-@skill.Id" name="Description" class="form-control" rows="2">@skill.Description</textarea>
                                </div>
                                <div class="col-12 text-end">
                                    <button class="btn btn-primary btn-sm" type="submit">
                                        <i class="fas fa-save me-1"></i> Сохранить
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="p-5 text-muted text-center">
        <i class="fas fa-language fa-2x mb-3"></i>
        <h5 class="fw-semibold">Нет добавленных языков</h5>
        <p>Нажмите «Добавить язык», чтобы начать</p>
    </div>
}
