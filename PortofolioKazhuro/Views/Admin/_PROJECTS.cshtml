@model IEnumerable<PortofolioKazhuro.Models.Project>
@{
    ViewData["Title"] = "Проекты";
}

<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card shadow border-0 rounded-4 mb-4">
        <div class="card-header bg-light rounded-top-4 d-flex justify-content-between align-items-center px-4 py-3">
            <h5 class="mb-0 fw-bold d-flex align-items-center">
                <i class="fas fa-code text-primary me-2"></i> Мои проекты
            </h5>
            <button class="btn btn-success d-flex align-items-center"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#addProjectForm"
                    aria-expanded="false"
                    aria-controls="addProjectForm">
                <i class="fas fa-plus me-2"></i>Добавить проект
            </button>
        </div>

        <!-- Форма добавления проекта -->
        <div class="collapse" id="addProjectForm">
            <div class="card-body border-top px-4">
                <form asp-action="AddProject" method="post" class="row g-4">
                    @Html.AntiForgeryToken()

                    <div class="col-md-4">
                        <label for="Title" class="form-label fw-semibold">Название</label>
                        <input id="Title" name="Title" class="form-control form-control-lg" placeholder="Название проекта" required />
                    </div>

                    <div class="col-md-4">
                        <label for="Description" class="form-label fw-semibold">Описание</label>
                        <input id="Description" name="Description" class="form-control form-control-lg" placeholder="Краткое описание" />
                    </div>

                    <div class="col-md-4">
                        <label for="GitHubUrl" class="form-label fw-semibold">Ссылка на GitHub</label>
                        <input id="GitHubUrl" name="GitHubUrl" class="form-control form-control-lg" placeholder="https://github.com/..." />
                    </div>

                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-lg btn-success">
                            <i class="fas fa-check me-2"></i>Сохранить
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Отображение проектов -->
        <div class="card-body bg-white px-4">
            @if (Model != null && Model.Any())
            {
                <div class="row g-4">
                    @foreach (var project in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow-sm border-0 h-100 rounded-4">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="fw-bold text-primary mb-2">@project.Title</h5>
                                    <p class="text-muted flex-grow-1">@project.Description</p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        @if (!string.IsNullOrWhiteSpace(project.GitHubUrl))
                                        {
                                            <a href="@project.GitHubUrl" class="btn btn-sm btn-outline-dark" target="_blank" rel="noopener noreferrer">
                                                <i class="fab fa-github me-1"></i> GitHub
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Нет ссылки</span>
                                        }

                                        <div class="d-flex gap-2">
                                            <a asp-action="EditProject" asp-route-id="@project.Id" class="btn btn-sm btn-outline-primary" title="Редактировать проект">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="DeleteProject" method="post" class="d-inline" onsubmit="return confirm('Удалить проект?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@project.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить проект">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                    <h5 class="fw-semibold">Проекты пока не добавлены</h5>
                    <p>Нажмите «Добавить проект», чтобы начать</p>
                </div>
            }
        </div>
    </div>
</div>
