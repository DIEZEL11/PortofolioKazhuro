@model IEnumerable<PortofolioKazhuro.Models.SkillCategory>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center py-4">
        <h5 class="mb-0">Категории навыков отсутствуют</h5>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Создать первую категорию и навык</h6>
        </div>
        <div class="card-body">
            <form asp-action="CreateSkillAndCategory" method="post" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="CategoryName" class="form-control" placeholder="Название категории" required />
                </div>
                <div class="col-md-4">
                    <input type="text" name="SkillName" class="form-control" placeholder="Название навыка" required />
                </div>
                <div class="col-md-2">
                    <input type="number" name="Proficiency" class="form-control" placeholder="0–100" min="0" max="100" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-plus"></i> Создать
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="row gy-4">
        @foreach (var category in Model)
        {
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="fas fa-layer-group me-2"></i>@category.Name</h6>
                        <div>
                            <button class="btn btn-sm btn-light me-1" data-bs-toggle="modal" data-bs-target="#editCategoryModal-@category.Id" title="Редактировать категорию">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form asp-action="DeleteCategory" method="post" class="d-inline" onsubmit="return confirm('Удалить категорию и все её навыки?');">
                                <input type="hidden" name="CategoryId" value="@category.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" title="Удалить категорию">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (category.Skills != null && category.Skills.Any())
                        {
                            <ul class="list-group mb-3">
                                @foreach (var skill in category.Skills)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <strong>@skill.Name</strong>
                                            <span class="text-muted">(@skill.Proficiency%)</span>
                                            <div class="progress mt-1" style="height:6px; max-width:150px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width:@skill.Proficiency%" aria-valuenow="@skill.Proficiency" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-light me-1" data-bs-toggle="modal" data-bs-target="#editSkillModal-@skill.Id" title="Редактировать навык">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="DeleteSkill" method="post" class="d-inline" onsubmit="return confirm('Удалить навык?');">
                                                <input type="hidden" name="SkillId" value="@skill.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" title="Удалить навык">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </li>

                                    <!-- Модальное окно редактирования навыка -->
                                    <div class="modal fade" id="editSkillModal-@skill.Id" tabindex="-1" aria-labelledby="editSkillLabel-@skill.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="EditSkill" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="editSkillLabel-@skill.Id">Редактировать навык</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="SkillId" value="@skill.Id" />
                                                        <div class="mb-3">
                                                            <label for="skillName-@skill.Id" class="form-label">Название</label>
                                                            <input type="text" class="form-control" id="skillName-@skill.Id" name="NewName" value="@skill.Name" required />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="skillProf-@skill.Id" class="form-label">Уровень владения (%)</label>
                                                            <input type="number" class="form-control" id="skillProf-@skill.Id" name="NewProficiency" min="0" max="100" value="@skill.Proficiency" required />
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                        <button type="submit" class="btn btn-primary">Сохранить</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-muted text-center">Нет навыков в этой категории.</div>
                        }

                        <form asp-action="AddSkill" method="post" class="row g-2 mt-3">
                            <input type="hidden" name="SkillCategoryId" value="@category.Id" />
                            <div class="col-md-5">
                                <input type="text" name="Name" placeholder="Название навыка" class="form-control form-control-sm" required />
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="Proficiency" placeholder="0–100" class="form-control form-control-sm" min="0" max="100" required />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-sm btn-success w-100">
                                    <i class="fas fa-plus"></i> Добавить
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card mt-5 shadow-sm rounded-4">
        <div class="card-header bg-secondary text-white text-center">
            <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Добавить новую категорию</h6>
        </div>
        <div class="card-body">
            <form asp-action="AddCategory" method="post" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="CategoryName" class="form-control" placeholder="Название категории" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Добавить</button>
                </div>
            </form>
        </div>
    </div>
}
