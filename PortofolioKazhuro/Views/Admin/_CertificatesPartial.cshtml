@model IEnumerable<PortofolioKazhuro.Models.Certificate>

<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-header bg-light rounded-top-4 px-4 py-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="fas fa-certificate me-2 text-warning"></i>
            <h5 class="mb-0 fw-semibold">Сертификаты</h5>
        </div>
        <button class="btn btn-success d-flex align-items-center"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#addCertForm"
                aria-expanded="false"
                aria-controls="addCertForm">
            <i class="fas fa-plus me-2"></i>Добавить сертификат
        </button>
    </div>

    <div class="collapse" id="addCertForm">
        <div class="card-body border-top px-4 py-3">
            <form asp-action="AddCertificate" method="post" enctype="multipart/form-data" class="row g-4">
                @Html.AntiForgeryToken()

                <div class="col-md-6">
                    <label for="Name" class="form-label fw-semibold">Название</label>
                    <input type="text" id="Name" name="Name" class="form-control form-control-lg" placeholder="Название сертификата" required />
                    <div class="text-danger small mt-1">
                        @ViewData.ModelState["Name"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="IssueDate" class="form-label fw-semibold">Дата выдачи</label>
                    <input type="month" id="IssueDate" name="IssueDate" class="form-control form-control-lg" />
                    <div class="text-danger small mt-1">
                        @ViewData.ModelState["IssueDate"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="File" class="form-label fw-semibold">Файл (необязательно)</label>
                    <input type="file" id="File" name="File" class="form-control form-control-lg" />
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-lg btn-success">
                        <i class="fas fa-check me-2"></i>Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card-body px-4 pb-4">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var cert in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body d-flex flex-column">
                                <h6 class="fw-bold text-dark mb-2">
                                    <i class="fas fa-award text-warning me-1"></i>@cert.Name
                                </h6>

                                @if (cert.IssueDate.HasValue)
                                {
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        @cert.IssueDate?.ToString("MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("ru-RU"))
                                    </p>
                                }

                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    @if (!string.IsNullOrEmpty(cert.FilePath))
                                    {
                                        <a asp-action="DownloadCertificate" asp-route-id="@cert.Id" class="btn btn-sm btn-outline-dark" title="Скачать сертификат">
                                            <i class="fas fa-download me-1"></i>Скачать
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Нет файла</span>
                                    }

                                    <div class="d-flex gap-2">
                                        <a asp-action="EditCertificate" asp-route-id="@cert.Id" class="btn btn-sm btn-outline-secondary" title="Редактировать сертификат">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteCertificate" method="post" class="d-inline" onsubmit="return confirm('Удалить сертификат?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@cert.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить сертификат">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="fas fa-folder-open fa-3x mb-3"></i>
                <h5 class="fw-semibold">Сертификаты пока не добавлены</h5>
                <p>Добавьте первый сертификат, чтобы он отобразился здесь.</p>
            </div>
        }
    </div>
</div>
