@model IEnumerable<PortofolioKazhuro.Models.Education>

<div class="card mb-4 shadow-sm border-0 rounded-4">
    <!-- Заголовок с кнопкой -->
    <div class="card-header bg-light rounded-top-4 px-4 py-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="fas fa-graduation-cap me-2 text-primary"></i>
            <h5 class="mb-0 fw-semibold">Образование</h5>
        </div>
        <button class="btn btn-success d-flex align-items-center"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#eduForm">
            <i class="fas fa-plus me-2"></i>Добавить образование
        </button>
    </div>

    <!-- Форма добавления -->
    <div class="collapse" id="eduForm">
        <div class="card-body border-top px-4 py-3">
            <form asp-action="AddEducation" method="post" class="row g-4">
                @Html.AntiForgeryToken()

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Учебное заведение</label>
                    <input name="Institution" class="form-control form-control-lg" placeholder="Название университета или колледжа" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Дата начала</label>
                    <input type="date" name="DateStart" class="form-control form-control-lg" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Дата окончания</label>
                    <input type="date" name="DateEnd" class="form-control form-control-lg" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Степень</label>
                    <input name="Degree" class="form-control form-control-lg" placeholder="Например: Бакалавр, Магистр" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Описание</label>
                    <input name="Description" class="form-control form-control-lg" placeholder="Факультет, специальность, достижения..." />
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-lg btn-success">
                        <i class="fas fa-check me-2"></i>Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Карточки образования -->
    <div class="card-body px-4 pb-4">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var edu in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body d-flex flex-column">
                                <h6 class="fw-bold text-dark mb-2">
                                    <i class="fas fa-university me-1 text-primary"></i> @edu.Institution
                                </h6>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-graduation-cap me-1"></i> @edu.Degree
                                </p>
                                @if (edu.DateStart.HasValue || edu.DateEnd.HasValue)
                                {
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        @edu.DateStart?.ToString("yyyy") - @edu.DateEnd?.ToString("yyyy")
                                    </p>
                                }
                                @if (!string.IsNullOrWhiteSpace(edu.Description))
                                {
                                    <p class="text-muted">@edu.Description</p>
                                }

                                <div class="mt-auto d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="openEditEducation(@edu.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <form asp-action="DeleteEducation" method="post" class="d-inline" onsubmit="return confirm('Удалить запись об образовании?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@edu.Id" />
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="fas fa-folder-open fa-3x mb-3"></i>
                <h5 class="fw-semibold">Записей об образовании пока нет</h5>
                <p>Добавьте первую, чтобы начать заполнять раздел</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="editEduModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Редактировать образование</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editEduContent">

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function openEditEducation(id) {
            fetch(`/Admin/EditEducation?id=${id}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById("editEduContent").innerHTML = html;
                    new bootstrap.Modal(document.getElementById("editEduModal")).show();
                });
        }
    </script>
}


